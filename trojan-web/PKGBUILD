pkgname=trojan-web
pkgver=2.9.7.1
pkgrel=1
pkgdesc='trojan多用户管理部署程序, 支持web页面管理'
arch=('x86_64')
url='https://github.com/Jrohy/trojan'
license=('GPL3')
conflicts=('trojan')

source=('${url}/releases/download/v${pkgver}/trojan'
        trojan-web.service)

sha256sums('5c897355e4aedd3af3964bfb23508bf62815bac13eff5ca05ea62f10bfc60103'
           '045f17ce2de01bf76a15c379785800b4cd3f23598d88338b0a0c735a4d676aa1'
           '')

package() {
  install -Dm 755 '${srcdir}/trojan' '$pkgdir/usr/bin'
  install -Dm 644 '${srcdir}/trojan-web.service' -t '${pkgdir}/usr/lib/systemd/system'
}

